<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HobbyistFragmentStyle"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/dots"
        style="@style/Dots"
        android:src="@drawable/dots_2"
        />

    <com.imgtec.hobbyist.views.GifWebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:scrollbars="none"
        app:path="file:///android_asset/buttons_press_animation.gif"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setup_mode_text"
        style="@style/SetupGuideTextCentered"
        android:layout_weight="0.3"
        />

    <Button
        android:id="@+id/continueButton"
        android:layout_height="@dimen/button_height"
        android:layout_width="match_parent"
        android:text="@string/continue_button"
        style="@style/CreatorButton"
        />
</LinearLayout>
