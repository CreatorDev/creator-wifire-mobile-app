<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HobbyistFragmentStyle"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/about_you_can_use"
            android:textSize="@dimen/help_information_text_size"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/section2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/about_section2"
            android:textSize="@dimen/help_information_text_size"
            android:layout_marginBottom="10dp"
            android:linksClickable="true"
            android:autoLink="web"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/about_all_other_products"
            android:textSize="@dimen/help_information_text_size"
            />

        <TextView
            android:id="@+id/buildNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:autoLink=""
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            />
    </LinearLayout>
</ScrollView>
