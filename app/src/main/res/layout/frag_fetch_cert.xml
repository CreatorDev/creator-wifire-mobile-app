<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HobbyistFragmentStyle"
    >

    <ImageView
        android:id="@+id/dots"
        style="@style/Dots"
        android:src="@drawable/dots_3"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="0.7"
        android:indeterminate="true"/>

    <ImageView
        android:id="@+id/certImage"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="0.7"
        android:src="@drawable/ic_certificate"
        android:visibility="gone"
        android:indeterminate="true"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fetching_certificates"
        style="@style/SetupGuideTextCentered"
        android:layout_weight="0.3"
        />

    <Button
        android:id="@+id/continueButton"
        android:layout_height="@dimen/button_height"
        android:layout_width="match_parent"
        android:text="@string/continue_button"
        style="@style/CreatorButton"
        />

    <Button
        style="@style/CreatorButton"
        android:id="@+id/retryButton"
        android:layout_height="@dimen/button_height"
        android:layout_width="match_parent"
        android:text="@string/retry_button_text"
        android:visibility="gone"
        />
</LinearLayout>
